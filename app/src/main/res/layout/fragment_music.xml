<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/music_fragment"
    >

    <ImageView
        android:src="@drawable/music_bg"
        android:id="@+id/music_bg_view"
        android:layout_gravity="center"
        android:layout_width="180dp"
        android:layout_height="180dp" />

    <LinearLayout
        android:id="@+id/music_random_layout"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/recommend_cover_image"
            android:layout_width="180dp"
            android:layout_height="250dp"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_margin="5dp"
            android:id="@+id/recommend_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/primaryText" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >


        <ImageView
            android:id="@+id/music_loading_top_image"
            android:scaleType="fitXY"
            android:src="@drawable/h1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/music_loading_bottom_image"
            android:scaleType="fitXY"
            android:src="@drawable/h2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />


    </LinearLayout>


</FrameLayout>
